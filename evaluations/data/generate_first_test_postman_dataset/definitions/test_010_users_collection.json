{
  "info": {
    "name": "Users API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASEURL",
      "value": "https://api.example.com"
    }
  ],
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "url": "{{BASEURL}}/users",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"John Doe\", \"email\": \"john@example.com\", \"age\": 30}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function() {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response contains user id', function() {",
                  "  const response = pm.response.json();",
                  "  pm.expect(response.id).to.be.a('number');",
                  "});",
                  "",
                  "pm.test('Response contains correct name', function() {",
                  "  const response = pm.response.json();",
                  "  pm.expect(response.name).to.equal('John Doe');",
                  "});",
                  "",
                  "pm.test('Response contains correct email', function() {",
                  "  const response = pm.response.json();",
                  "  pm.expect(response.email).to.equal('john@example.com');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
